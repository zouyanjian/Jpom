<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <!-- 日志存放路径，需要配置自己路径-->
  <property name="log_dir" value="logs" />

  <!-- 日志显示名称，默认web.log -->
  <property name="projectName" value="pdd-auto-coverage"/>


  <!-- 控制台输出日志 -->
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>[%date{yyyy-MM-dd HH:mm:ss.SSS}] [%thread] [%-5level] [%logger:%line] --%mdc{client} %msg%n</pattern>
    </encoder>
  </appender>

  <!-- 文件日志  -->
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${log_dir}/${projectName}.log</file>
     <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      <!-- 日志保留最大size -->
      <maxFileSize>500MB</maxFileSize>
    </triggeringPolicy>
    <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
      <fileNamePattern>${log_dir}/bak/${projectName}.%i.log.zip</fileNamePattern>
      <!-- 超过最大值后分割数 -->
      <minIndex>1</minIndex>
      <maxIndex>10</maxIndex>
    </rollingPolicy>
    <encoder>
	  <pattern>[%date{yyyy-MM-dd HH:mm:ss.SSS}] [%thread] [%-5level] [%logger:%line] --%mdc{client} %msg%n</pattern>
	</encoder>
  </appender>

  <root level="INFO">
  	<appender-ref ref="STDOUT" />
    <appender-ref ref="FILE" />
  </root>



</configuration>
